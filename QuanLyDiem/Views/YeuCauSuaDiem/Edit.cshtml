@model QuanLyDiem.Models.YeuCauSuaDiem

@{
    ViewData["Title"] = "Edit";
}

<h3>Phê duyệt yêu cầu</h3>
<hr />
<div class="row">
    <div class=" w3-card w3-white container w3-round-large" style="width:60%">
        <form asp-action="Edit">
            <h4 class="w3-center">Thông tin yêu cầu sửa điểm</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaYeuCauSuaDiem" />
            <div class="form-row" style="display: flex; justify-content: center;">
                <div class="form-group col-md-4" >
                    <label class="control-label">Giảng viên</label>
                    <input asp-for="MaGiangVien" class="form-control" readonly></input>
                    <span asp-validation-for="MaGiangVien" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4" >
                    <label class="control-label">Sinh viên</label>
                    <input asp-for="MaSinhVien" class="form-control" readonly></input>
                    <span asp-validation-for="MaSinhVien" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4" >
                    <label class="control-label">Học phần</label>
                    <input asp-for="MaHocPhan" class="form-control" readonly></input>
                    <span asp-validation-for="MaHocPhan" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label class="control-label">Điểm C</label>
                    <input asp-for="DiemChuyenCan" class="form-control" readonly></input>
                    <span asp-validation-for="DiemChuyenCan" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Điểm B</label>
                    <input asp-for="DiemKiemTra" readonly class="form-control" />
                    <span asp-validation-for="DiemKiemTra" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Điểm C mới</label>
                    <input asp-for="DiemChuyenCanMoi" readonly class="form-control" />
                    <span asp-validation-for="DiemChuyenCanMoi" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Điểm B mới</label>
                    <input asp-for="DiemKiemTraMoi" readonly class="form-control" />
                    <span asp-validation-for="DiemKiemTraMoi" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label class="control-label">Lý do</label>
                    <input asp-for="LyDo" readonly class="form-control" />
                    <span asp-validation-for="LyDo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label">Trạng thái</label>
                    <select asp-for="TrangThai" class ="form-control">
                        <option value="Đang chờ xử lý">Đang chờ xử lý</option>
                        <option value="Từ chối">Từ chối</option>
                        <option value="Thành công">Thành công</option>
                    </select>
                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-outline-info" /> |
                <a asp-action="Index">Trở về</a>
            </div>
        </form>
    </div>
</div>  

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
