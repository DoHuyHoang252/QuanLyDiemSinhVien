@model QuanLyDiem.Models.YeuCauPhucKhao

@{
    ViewData["Title"] = "Edit";
}

<h3>Phê duyệt yêu cầu</h3>
<hr />
<div class="row">
    <div class=" w3-card w3-white container w3-round-large" style="width:60%">
        <form asp-action="Edit">
            <h4 class="w3-center">Thông tin yêu cầu phúc khảo</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaYeuCauPhucKhao" />
            <div class="form-row" style="display: flex; justify-content: center;">
                <div class="form-group col-md-5" >
                    <label class="control-label">Sinh viên</label>
                    <input asp-for="MaSinhVien" readonly class="form-control" ></input>
                    <span asp-validation-for="MaSinhVien" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5" >
                    <label class="control-label">Học phần</label>
                    <input asp-for="MaHocPhan" readonly class="form-control" ></input>
                    <span asp-validation-for="MaHocPhan" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label class="control-label">Điểm thi</label>
                    <input readonly asp-for="DiemThi" class="form-control" ></input>
                    <span asp-validation-for="DiemThi" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-9">
                    <label class="control-label">Lý do</label>
                    <input asp-for="LyDo" readonly class="form-control" ></input>
                    <span asp-validation-for="LyDo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Trạng thái</label>
                    <select asp-for="TrangThai" class="form-control">
                        <option value="Đang xử lý">Đang xử lý </option>
                        <option value="Đã hoàn thành">Đã hoàn thành</option>
                    </select>
                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-outline-info" /> |
                <a asp-action="Index">Trở về</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
