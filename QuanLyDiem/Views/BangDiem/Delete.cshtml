@model QuanLyDiem.Models.BangDiem

@{
    ViewData["Title"] = "Delete";
}

<h3>Xóa bảng điểm sinh viên</h3>

<div>
    <hr />
    <dl class="w3-card w3-white container w3-round-large" style="width:60%">
        <div class="row">
            <dt class = "col-sm-3">
                Tên sinh viên
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.SinhVien.TenSinhVien)
            </dd>
            <dt class = "col-sm-3">
                Học phần
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.HocPhan.TenHocPhan)
            </dd>
        </div>
        <div class="row">
            <dt class = "col-sm-3">
                Số tín chỉ
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.SoTinChi)
            </dd>
            <dt class = "col-sm-3">
                Lớp học phần
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.LopHocPhan.TenLopHocPhan)
            </dd>
        </div>
        <div class="row">
            <dt class = "col-sm-3">
                Điểm C
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.DiemChuyenCan)
            </dd>
            <dt class = "col-sm-3">
                Điểm B
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.DiemKiemTra)
            </dd>
        </div>
        <div class="row">
            <dt class = "col-sm-3">
                Điểm A
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.DiemThi)
            </dd>
            <dt class = "col-sm-3">
                Điểm TK(10)
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.DiemTong)
            </dd>
        </div>
        <div class="row">
            <dt class = "col-sm-3">
                Điểm TK(4)
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.DiemTongHe4)
            </dd>
            <dt class = "col-sm-3">
                Điểm TK(C)
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.DiemChu)
            </dd>
        </div>
    </dl>
    <h4 class="w3-center">Bạn có chắc chắn muốn xóa bảng điểm này?</h4>
    <form class="w3-center" asp-action="Delete">
        <input type="hidden" asp-for="MaBangDiem" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Hủy</a>
    </form>
</div>
