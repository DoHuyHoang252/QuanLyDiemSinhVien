@model QuanLyDiem.Models.HocPhan

@{
    ViewData["Title"] = "Create";
}

<h3>Thêm mới học phần</h3>
<hr>
    <div class=" w3-card w3-white container w3-round-large" style="width:50%">
        <form asp-action="Upload"  enctype="multipart/form-data">
            <div class="form-row">
                <div class="col-md-8">
                    <label for="">Nhập học phần từ Excel:</label>
                    <input type="file" name="file" class="">
                </div>
                <div class="col-md-4">
                    <input type="submit" value="Tải lên" class="w3-margin btn btn-outline-info">
                </div>
            </div>
        </form>
    </div>
<hr />

<div class="row">
    <div class=" w3-card w3-white container w3-round-large" style="width:50%">
        <form asp-action="Create">
            <h4 class="w3-center">Nhập thông tin học phần</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row" style="display: flex; justify-content: center;">
                <div class="form-group col-md-4" >
                    <label class="control-label">Mã học phần</label>
                    <input asp-for="MaHocPhan" class="form-control" />
                    <span asp-validation-for="MaHocPhan" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <label class="control-label">Tên Học Phần</label>
                    <input asp-for="TenHocPhan" class="form-control" />
                    <span asp-validation-for="TenHocPhan" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="control-label">Số tín chỉ</label>
                    <input asp-for="SoTinChi" class="form-control" />
                    <span asp-validation-for="SoTinChi" class="text-danger"></span>
                </div>
                 <div class="form-group col-md-8">
                    <label class="control-label">Chuyên ngành</label>
                    <select asp-for="MaChuyenNganh" class ="form-control" asp-items="ViewBag.MaChuyenNganh"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-outline-info w3-medium" /> |
                <a asp-action="Index">Trở về</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
