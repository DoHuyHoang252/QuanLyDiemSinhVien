@model QuanLyDiem.Models.ChuyenNganh

@{
    ViewData["Title"] = "Create";
}

<h3>Thêm mới chuyên ngành</h3>
<hr>

<div class="row">
    <div class=" w3-card w3-white container w3-round-large" style="width:50%">
        <form asp-action="Create">
            <h4 class="w3-center">Nhập thông tin chuyên ngành</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row" style="display: flex; justify-content: center;">
                <div class="form-group col-md-4" >
                    <label class="control-label">Mã chuyên ngành</label>
                    <input asp-for="MaChuyenNganh" class="form-control" />
                    <span asp-validation-for="MaChuyenNganh" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <label class="control-label">Tên chuyên ngành</label>
                    <input asp-for="TenChuyenNganh" class="form-control" />
                    <span asp-validation-for="TenChuyenNganh" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <label class="control-label">Khoa</label>
                    <select asp-for="MaKhoa" class ="form-control" asp-items="ViewBag.MaKhoa"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-outline-info" /> |
                <a asp-action="Index">Trở về</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
