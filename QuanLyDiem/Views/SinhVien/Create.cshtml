@model QuanLyDiem.Models.SinhVien

@{
    ViewData["Title"] = "Create";
}

<h3>Tạo mới sinh viên</h3>

<hr>
    <div class=" w3-card w3-white container w3-round-large" style="width:50%">
        <form asp-action="Upload"  enctype="multipart/form-data">
            <div class="form-row">
                <div class="col-md-8">
                    <label for="">Nhập sinh viên từ Excel:</label>
                    <input type="file" name="file" class="">
                </div>
                <div class="col-md-4">
                    <input type="submit" value="Tải lên" class="w3-margin btn btn-outline-info">
                </div>
            </div>
        </form>
    </div>
<hr />

<div class="row">
    <div class=" w3-card w3-white container w3-round-large" style="width:50%">
        <form asp-action="Create">
            <h4 class="w3-center">Nhập thông tin sinh viên</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row" style="display: flex; justify-content: center;">
                <div class="form-group col-md-4" >
                    <label class="control-label"> Mã sinh viên</label>
                    <input asp-for="MaSinhVien" class="form-control" />
                    <span asp-validation-for="MaSinhVien" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <label  class="control-label">Tên sinh viên</label>
                    <input asp-for="TenSinhVien" class="form-control" />
                    <span asp-validation-for="TenSinhVien" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="control-label">Giới tính</label>
                    <select asp-for="GioiTinh" class ="form-control">
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                        <option value="Khác">Khác</option>
                    </select>
                    <span asp-validation-for="GioiTinh" class="text-danger"></span>
                </div>
                 <div class="form-group col-md-4">
                    <label class="control-label">Ngày sinh</label>
                    <input asp-for="NgaySinh" class="form-control" />
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label">Tình trạng</label>
                    <select asp-for="TinhTrang" class ="form-control">
                        <option value="Đang theo học">Đang theo học</option>
                        <option value="Tạm hoãn">Tạm hoãn</option>
                        <option value="Đã nghỉ học">Đã nghỉ học</option>
                    </select>
                    <span asp-validation-for="TinhTrang" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label class="control-label">Chuyên ngành</label>
                    <select asp-for="MaChuyenNganh" class ="form-control" asp-items="ViewBag.MaChuyenNganh"></select>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label">Khóa</label>
                    <select asp-for="MaKhoaHoc" class ="form-control" asp-items="ViewBag.MaKhoaHoc"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-outline-info" /> |
                <a asp-action="Index">Trở về</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
