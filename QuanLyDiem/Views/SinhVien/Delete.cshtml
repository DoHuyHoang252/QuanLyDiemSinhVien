@model QuanLyDiem.Models.SinhVien

@{
    ViewData["Title"] = "Delete";
}

<h3>Xóa sinh viên</h3>

<div>
    <hr />
    <dl class="w3-card w3-white container w3-round-large" style="width:60%">
        <div class="row">
            <dt class = "col-sm-3">
                Mã sinh viên
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.MaSinhVien)
            </dd>
            <dt class = "col-sm-3">
                Tên sinh viên
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.TenSinhVien)
            </dd>
        </div>
        <div class="row">
            <dt class = "col-sm-3">
                Giới tính
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.GioiTinh)
            </dd>
            <dt class = "col-sm-3">
                Ngày sinh
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.NgaySinh)
            </dd>
        </div>
        <div class="row">
            <dt class = "col-sm-3">
                Tình trạng
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.TinhTrang)
            </dd>
            <dt class = "col-sm-3">
                Chuyên ngành
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.ChuyenNganh.TenChuyenNganh)
            </dd>
        </div>
        <div class="row">
            <dt class = "col-sm-3">
                Khóa
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.KhoaHoc.TenKhoaHoc)
            </dd>
            <dt class = "col-sm-3">
                ĐTBTL hệ 10
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.DTBTLHe10)
            </dd>
        </div>
        <div class="row">
            <dt class = "col-sm-3">
                Số tín chỉ tích lũy
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.SoTinChiTichLuy)
            </dd>
            <dt class = "col-sm-3">
                ĐTBTL hệ 4
            </dt>
            <dd class = "col-sm-3">
                @Html.DisplayFor(model => model.DTBTLHe4)
            </dd>
        </div>
    </dl>
    <h4 class="w3-center">Bạn có chắc chắn muốn xóa sinh viên này?</h4>
    <form class="w3-center" asp-action="Delete">
        <input type="hidden" asp-for="MaSinhVien" />
        <input type="submit" value="Xóa" class="btn w3-medium btn-danger" /> |
        <a asp-action="Index">Hủy</a>
    </form>
</div>