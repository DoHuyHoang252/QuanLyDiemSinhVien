@model QuanLyDiem.Models.DiemRenLuyen

@{
    ViewData["Title"] = "Edit";
}

<h3>Sửa thông tin ĐRL</h3>
<hr>
<div class="row">
    <div class=" w3-card w3-white container w3-round-large" style="width:60%">
        <form asp-action="Edit">
            <h4 class="w3-center">Thông tin ĐRL</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaDiemRenLuyen" />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="control-label">Mã sinh viên</label>
                    <select asp-for="MaSinhVien" class="form-control" asp-items="ViewBag.MaSinhVien"></select>
                    <span asp-validation-for="MaSinhVien" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label class="control-label">Học kỳ</label>
                    <select asp-for="MaHocKy" class="form-control" asp-items="ViewBag.MaChuyenNganh"></select>
                    <span asp-validation-for="MaHocKy" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row" style="display: flex; justify-content: center;">
                <div class="form-group col-md-3" >
                    <label class="control-label">ĐRL</label>
                    <input asp-for="DiemRL" class="form-control" />
                    <span asp-validation-for="DiemRL" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn w3-medium btn-outline-info" /> |
                <a asp-action="Index">Trở về</a>
            </div>
        </form>
    </div>
</div>  

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}