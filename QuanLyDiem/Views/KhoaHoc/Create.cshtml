@model QuanLyDiem.Models.KhoaHoc

@{
    ViewData["Title"] = "Create";
}

<h3>Tạo mới khóa học</h3>

<hr>

<div class="row">
    <div class=" w3-card w3-white container w3-round-large" style="width:40%">
        <form asp-action="Create">
            <h4 class="w3-center">Nhập thông tin khóa học</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row" style="display: flex; justify-content: center;">
                <div class="form-group col-md-6" >
                    <label class="control-label">Mã khóa học</label>
                    <input asp-for="MaKhoaHoc" class="form-control" />
                    <span asp-validation-for="MaKhoaHoc" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label class="control-label">Tên khóa học</label>
                    <input asp-for="TenKhoaHoc" class="form-control" />
                    <span asp-validation-for="TenKhoaHoc" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="control-label">Thời gian bắt đầu</label>
                    <input asp-for="NamBatDau" class="form-control" />
                    <span asp-validation-for="NamBatDau" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label class="control-label">Thời gian kết thúc</label>
                    <input asp-for="NamKetThuc" class="form-control" />
                    <span asp-validation-for="NamKetThuc" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-outline-info w3-medium" /> |
                <a asp-action="Index">Trở về</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
