@model QuanLyDiem.Models.HocKy

@{
    ViewData["Title"] = "Create";
}

<h3>Tạo mới học kỳ</h3>
<hr>
<div class="row">
    <div class=" w3-card w3-white container w3-round-large" style="width:50%">
        <form asp-action="Create">
            <h4 class="w3-center">Nhập thông tin học kỳ</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row" style="display: flex; justify-content: center;">
                <div class="form-group col-md-4" >
                    <label class="control-label">Mã học kỳ</label>
                    <input asp-for="MaHocKy" class="form-control" />
                    <span asp-validation-for="MaHocKy" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label">Tên học kỳ</label>
                    <input asp-for="TenHocKy" class="form-control" />
                    <span asp-validation-for="TenHocKy" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label">Khóa học</label>
                    <select asp-for="MaKhoaHoc" class ="form-control" asp-items="ViewBag.MaKhoaHoc"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-outline-info" /> |
                <a asp-action="Index">Trở về</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
