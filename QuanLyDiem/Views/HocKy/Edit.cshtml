@model QuanLyDiem.Models.HocKy

@{
    ViewData["Title"] = "Edit";
}

<h3>Sửa thông tin học kỳ</h3>
<hr>
<div class="row">
    <div class=" w3-card w3-white container w3-round-large" style="width:60%">
        <form asp-action="Edit">
            <h4 class="w3-center">Thông tin học kỳ</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaHocKy" />
            <div class="form-row" style="display: flex; justify-content: center;">
                <div class="form-group col-md-6" >
                    <label class="control-label">Học kỳ</label>
                    <input asp-for="TenHocKy" class="form-control" />
                    <span asp-validation-for="TenHocKy" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6" >
                    <label class="control-label">Khóa học</label>
                    <select asp-for="MaKhoaHoc" class="form-control" asp-items="ViewBag.MaKhoaHoc"></select>
                    <span asp-validation-for="MaKhoaHoc" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn w3-medium btn-outline-info" /> |
                <a asp-action="Index">Trở về</a>
            </div>
        </form>
    </div>
</div>  



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
