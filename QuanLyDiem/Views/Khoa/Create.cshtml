@model QuanLyDiem.Models.Khoa

@{
    ViewData["Title"] = "Create";
}

<h3>Tạo mới khoa</h3>

<hr>

<div class="row">
    <div class=" w3-card w3-white container w3-round-large" style="width:40%">
        <form asp-action="Create">
            <h4 class="w3-center">Nhập thông tin khoa</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row" style="display: flex; justify-content: center;">
                <div class="form-group col-md-6" >
                    <label class="control-label">Mã khoa</label>
                    <input asp-for="MaKhoa" class="form-control" />
                    <span asp-validation-for="MaKhoa" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label class="control-label">Tên khoa</label>
                    <input asp-for="TenKhoa" class="form-control" />
                    <span asp-validation-for="TenKhoa" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-outline-info w3-medium" /> |
                <a asp-action="Index">Trở về</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
